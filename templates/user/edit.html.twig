{% extends 'base.html.twig' %}

{% block title %}Mon compte {% endblock %}

{% block body %}

    <div class="container mt-2">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Mon compte</h1>
                    </div>
                    <div class="card-body">
                        {{ form_errors(form) }}
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.classe, {'attr': {'class': 'form-control', 'placeholder': 'Classe'}}) }}
                        </div>


                        <button type="submit" class="btn btn-primary btn-block">Modifier</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
