{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <div class="mt-5">
    <h1>Note</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Note</th>
                <td>{{ note.note }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ note.description|raw }}</td>
            </tr>
            <tr>
                <th>Coeff</th>
                <td>{{ note.coeff }}</td>
            </tr>
            <tr>
                <th>Point</th>
                <td>{{ note.point }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_note_index') }}" class="btn btn-primary">Retour</a>


    <br>
    <br>
{% endblock %}
